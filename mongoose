const mongoose = require('mongoose');
require('dotenv').config()

main().catch(err => console.log(err));

async function main() {
    await mongoose.connect(process.env.MONGOCONNECT);
}

const responseSchema = new mongoose.Schema({
    name: String,
    gender: String,
    _id: String,
    contact_number: String,
    degree: String,
    branch: String,
    pass_out_year:String,
    CGPA: String,
    class10 : String,
    class12 : String,
    // Batch: String,
    collegename: String,
    // course: String,
    resume: String,
});

const response = mongoose.model(process.env.FORM_DB_NAME, responseSchema);

module.exports = {
    model: response
}